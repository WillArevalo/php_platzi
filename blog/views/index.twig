{% extends "layout.twig" %}
{% block content %}
	{% for blogPost in itemsList %}
		<div class="blog-post">
			<!--Este template va a heredar de otro template-->
			<h2><!--Para imprimir un valor con twig se utiliza doble corchete-->
				<a href="{{ ('post/' ~ blogPost.title) | url }}" class="text-success">
					{{blogPost.title | replace({'-': " "})}}
				</a>
				{% set title = blogPost.title %}
			</h2>
			<p>
				{{blogPost.updated_at}} by <a href="#">Will</a>
			</p>
			{% if blogPost.img_url %}
				<div class="blog-post-image">
					<img src="{{ blogPost.img_url }}" alt="" class="img-responsive">
				</div>
			{% endif %}
			<br>
			<div class="blog-post-content article">
				{{blogPost.slug}}
			</div>
		</div>
	{% endfor %}
	<div class="text-center">
		<nav aria-label="Page navigation">
		  <ul class="pagination pagination-lg">
		    <li>
		      <a href="{{ pag - 1 }}" aria-label="Previous">
		        <span aria-hidden="true">&laquo;</span>
		      </a>
		    </li>
			{% for i in range(1, totalPages) %}
				{% if i == pag %}
					<li class="active"><a href="{{i}}">{{i}}</a></li>
				{% else %}
				  	<li><a href="{{i}}">{{i}}</a></li>
				{% endif %}
			{% endfor %}
		    <li>
		      <a href="{{ pag + 1 }}" aria-label="Next">
		        <span aria-hidden="true">&raquo;</span>
		      </a>
		    </li>
		  </ul>
		</nav>
	</div>
{% endblock %} 
