{% extends 'layout.twig' %}

{% block content %}
	<head>
		<style>
			body{
				background-color: #f0f0f0;
				background-image: url("{{ 'images/plans.jpeg' | url }}");
				background-size: cover;
				font-family: 'Montserrat', sans-serif;
				margin-top: 5vh;
			}
			img{
				border-radius: 10px 0px;
			}
			.container{
				background: rgba(0,0,0,0.1);
				height: 90vh;
				border-radius: 10px;
			}
		</style>
	</head>
	<div class="col-xs-10 col-sm-10 col-md-11">
		<h2>New User</h2>
	</div>
	<div class="col-xs-2 col-sm-2 col-md-1">
		<a href="{{ 'admin/users' | url }}" class="btn btn-default btn-xs">Back</a>
	</div>
	<br>
	{% if errors %}
		<div class="alert alert-danger col-xs-12 col-sm-12 col-md-12">
			<ul>
				{% for input, messages in errors %}
					{% for message in messages %}
						<li>{{ input }}: {{ message }}</li>
					{% endfor %}
				{% endfor %}
			</ul>
		</div>
	{% endif %}
	<!--Si existe result y result es true-->
	{% if result %}
		<div class="alert alert-success col-xs-12 col-sm-12 col-md-12 ">User Saved!</div>';
	{% endif %}
	<div class="col-xs-12 col-sm-12 col-md-12">
		<form method="post">
		<div class="form-group">
	      <label for="inputName">Name:</label>
	      <input type="text" name="name" class="form-control" id="inputName" name="email">
	    </div>
	    <div class="form-group">
	      <label for="inputEmail">Email:</label>
	      <input type="text" name="email" class="form-control" id="inputEmail" placeholder="david@example.com" name="email">
	    </div>
	    <div class="form-group">
	      <label for="inputPassword">Password:</label>
	      <input type="password" name="password" class="form-control" id="inputPassword" name="password">
	    </div>
	    <button type="submit" class="btn btn-primary btn-lg">Save</button>
		</form>	
	</div>
{% endblock %}