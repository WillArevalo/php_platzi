{% extends 'layout.twig' %}

{% block content %}
	<head>
		<style>
			body{
				background-color: #f0f0f0;
				background-image: url("{{ 'images/background.png' | url }}");
				background-size: cover;
				font-family: 'Montserrat', sans-serif;
				margin-top: 5vh;
			}
			img{
				border-radius: 10px 0px;
			}
			.container{
				background: rgba(0,0,0,0.1);
				height: 90vh;
				border-radius: 10px;
				border:1px solid gray;
			}
		</style>
	</head>
	<div class="col-xs-10 col-sm-10 col-md-11">
		<h2 class="text-muted">New User</h2>
	</div>
	<div class="col-xs-2 col-sm-2 col-md-1">
		<a href="{{ 'admin/users' | url }}" class="btn btn-default btn-xs">Back</a>
	</div>
	<br>
	{% if errors %}
		{% include('partials/errors.twig') %}
	{% endif %}
	<!--Si existe result y result es true-->
	{% if result %}
		<div class="alert alert-success col-xs-12 col-sm-12 col-md-12 ">User Saved!</div>';
	{% endif %}
	<div class="col-xs-12 col-sm-12 col-md-12">
		<form method="post" onsubmit="return validateForm()">
		<div class="form-group">
	      <label for="inputName" class="text-muted">*Name:</label>
	      <input type="text" name="name" class="form-control" id="inputName">
	    </div>
	    <div class="form-group">
	      <label for="inputEmail" class="text-muted">*Email:</label>
	      <input type="text" name="email" class="form-control" id="inputEmail" placeholder="david@example.com">
	    </div>
	    <div class="form-group">
	      <label for="inputPassword" class="text-muted">*Password:</label>
	      <input type="password" name="password" class="form-control" id="inputPassword">
	    </div>
	    <button type="submit" class="btn btn-primary btn-lg">Save</button>
		</form>	
	</div>
{% endblock %}
{% block js %}
	<script type="text/javascript">
		function validateForm(){
			var name = document.getElementById('inputName').value.trim();
			var email = document.getElementById('inputEmail').value.trim();
			var password = document.getElementById('inputPassword').value.trim();
			if(name === '' || email === '' || password === ''){
				swal({
				  title: 'Â¡Error!',
				  text: 'All inputs with * are required.',
				  timer: 3000
				}).then(
				  function () {},
				  // handling the promise rejection
				  function (dismiss) {
				    if (dismiss === 'timer') {
				      console.log('I was closed by the timer')
				    }
				  }
				)
			return false;
			}
		}
	</script>
{% endblock %}