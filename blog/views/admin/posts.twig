{% extends 'layout.twig' %}
{% block content %}
	<head>
		<style>
			body{
				background-color: #f0f0f0;
				background-image: url("{{ 'images/plans.jpeg' | url }}");
				background-size: cover;
				font-family: 'Montserrat', sans-serif;
				margin-top: 5vh;
			}
			img{
				border-radius: 10px 0px;
			}
			.container{
				background: rgba(0,0,0,0.3);
				height: 90vh;
				border-radius: 10px;
			}
			.containertable{
				max-height: 300px;
				overflow-y: auto;
			}
			::-webkit-scrollbar { width: 9px; } 
			/* Track */ 
			::-webkit-scrollbar-track { 
				-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
				-webkit-border-radius: 5px; 
				border-radius: 5px; 
				} 
			/* Handle */ 
			::-webkit-scrollbar-thumb {
			 -webkit-border-radius: 10px; 
			 border-radius: 10px; 
			 background: rgba(0,0,0,0.4);
			 -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
			} 
			::-webkit-scrollbar-thumb:window-inactive { 
				background: rgba(0,0,0,0.4); 
			}
		</style>
	</head>
	<h2>Posts</h2>
	<a href="{{'admin/posts/create' | url }}" class="btn btn-primary btn-lg">New Post</a>
	<br/>
	<br/>
	<div class="containertable">
		<table class=" table table-responsive table-striped table-hover col-sm-12 col-md-12">
			<thead>
				<tr>
					<th>Title</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				{% for blogPost in blogPosts %}
					<tr>

						<td>
							<b>
								<a href="{{ ('post/' ~ blogPost.title) | url }}" class="text-success">
								{{blogPost.title | replace({'-': " "})}}
								</a>
							</b>
						</td>
						<td class="text-primary"><span class="glyphicon glyphicon-pencil"></td>
						<td class="text-danger"><span class="glyphicon glyphicon-trash"></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}